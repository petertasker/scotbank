        <th>Account ID</th>
        <th>Name</th>
        <th>Balance</th>
    </tr>
    </thead>
    <tbody>
    {{#if hasaccounts}}
        {{#each accounts}}
            <tr>
                <td>AccountID: {{accountID}}</td>
                <td>Name: {{name}}</td>
                <td>Balance: Â£{{balance}}</td>
            </tr>
        {{/each}}
