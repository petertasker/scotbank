<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="/transaction-chart.js"></script>
</head>
<body>
<div class="content-wrapper">
    <h1>Welcome, {{name}}</h1>

    <div class="account-info">
        <p class="account-id">Account ID: {{accountid}}</p>
        <p class="balance">£{{balance}}</p>
        <!-- Add RoundUp Pot Display -->
        {{#roundUpEnabled}}
            <div class="roundup-pot">
                <p class="roundup-title">Round-Up Savings Pot</p>
                <p class="roundup-balance">£{{roundUpBalance}}</p>
            </div>
        {{/roundUpEnabled}}
        <a href="/logout">Logout</a>
    </div>

    <div class="action-buttons">
        <button type="button" class="btn btn-primary" onclick="window.location.href='account/deposit'">Deposit</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='account/withdraw'">Withdrawal</button>
    </div>

    {{#if success}}
        <p style="color: green">{{success}}</p>
    {{/if}}
    {{#if error}}
        <p style="color: red">{{error}}</p>
    {{/if}}

    {{#if hastransactions}}
        <div class="transactions-section">
            <h2>Transaction History</h2>
            <hr>
            {{#each transactions}}
                <div class="transaction">
                    <p><strong>Date:</strong>{{timestamp}}</p>
                    <p><strong>ID:</strong>{{id}}</p>
                    <p><strong>Amount:</strong>£{{amount}}</p>
                    <p><strong>From:</strong>{{from}}</p>
                    <p><strong>To:</strong>{{to}}</p>
                    <p><strong>Type:</strong>{{type}}</p>
                    <p><strong>Status:</strong>{{#if status}}Accepted{{else}}Declined{{/if}}</p>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>No transactions found.</p>
    {{/if}}
</div>
</body>
</html>