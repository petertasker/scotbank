<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="/transaction-chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
</head>
<body>
<div class="content-wrapper">
    <h1>Welcome, {{name}}</h1>

    <div class="account-info">
        <p class="account-id">Account ID: {{accountid}}</p>
        <p>Card Number: {{cardnumber}}</p>
        <p>CVV: {{cardcvv}}</p>
        <p class="balance">¬£{{balance}}</p>
        <div class="roundup-pot">
            <div class="roundup-toggle-container">
                <p class="roundup-title">Round-Up Transactions</p>
                <label class="toggle-switch">
                    <input type="checkbox" id="roundUpToggle">
                    <span class="toggle-slider"></span>
                    <span class="sr-only">Toggle Round-Up Transactions feature</span>
                </label>
                <p class="toggle-status">Disabled</p>   
            </div>
            <p class="roundup-title">Round-Up Savings Pot üçØ</p>
            <h2 class="roundup-balance" role="text">{{roundUpBalance}}</h2>
            <div class="reclaim-container" id="reclaimContainer">
                <button class="reclaim-button" id="reclaimButton">
                    <span class="sparkle">‚ú®</span>
                    Reclaim Round-Up
                    <span class="sparkle">‚ú®</span>
                </button>
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <button type="button" class="btn btn-primary" onclick="window.location.href='account/deposit'">Deposit</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='account/withdraw'">Withdrawal</button>
        <button type="button" class="btn btn-primary" onclick="scrollToInsights()">Insights</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='account/reward'">Rewards</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='/logout'">Log out</button>
    </div>

    {{#if success}}
        <p style="color: green">{{success}}</p>
    {{/if}}
    {{#if error}}
        <p style="color: red">{{error}}</p>
    {{/if}}

    {{#if hastransactions}}
        <div class="transactions-section">
            <h2>Transaction History</h2>
            <hr>
            {{#each transactions}}
                <div class="transaction">
                    <p><strong>Date: </strong>{{timestamp}}</p>
                    <p><strong>ID: </strong>{{id}}</p>
                    <p><strong>Amount: </strong>¬£{{amount}}</p>
                    <p><strong>From: </strong>{{from}}</p>
                    <p><strong>To: </strong>{{to}}</p>
                    <p><strong>Type: </strong>{{type}}</p>
                    <p><strong>Status: </strong>{{#if status}}Accepted{{else}}Declined{{/if}}</p>
                </div>
            {{/each}}
        </div>

        <!-- First Insights Section -->
        <div class="insights-section" id="payments-by-category">
            <h2>Spending Insights: Number of Payments</h2>
            <hr>
            <div class="insights-container">
                <div class="insight-card">
                    <h4>Number of Payments per Business Category</h4>
                    <div class="category-container">
                        {{#if businesscounts}}
                            <div class="category-list-container">
                                <div class="category-list">
                                    {{#each businesscounts}}
                                        <div class="category-item">
                                            <span class="category-name">{{category}}:</span>
                                            <span class="category-count">{{count}}</span>
                                        </div>
                                    {{/each}}
                                </div>
                                <div class="chart-container">
                                    <canvas id="business-account-chart"></canvas>
                                </div>
                            </div>
                        {{else}}
                            <p>No business categories found.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

        <!-- Second Insights Section -->
        <div class="insights-section" id="payments-sum-by-category">
            <h2>Spending Insights: Sum of Payments</h2>
            <hr>
            <div class="insights-container">
                <div class="insight-card">
                    <h4>Sum of Payments per Business Category</h4>
                    <div class="category-container">
                        {{#if businesssums}}
                            <div class="category-list-container">
                                <div class="category-list">
                                    {{#each businesssums}}
                                        <div class="category-item">
                                            <span class="category-name">{{category}}:</span>
                                            <span class="category-sum">¬£{{totalAmount}}</span>
                                        </div>
                                    {{/each}}
                                </div>
                                <div class="chart-container">
                                    <canvas id="business-sum-chart"></canvas>
                                </div>
                            </div>
                        {{else}}
                            <p>No business categories found.</p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <p>No transactions found.</p>
    {{/if}}
</div>
</body>
<script>
    // Smooth scroll function without updating URL
    function scrollToInsights() {
        const insightsSection = document.getElementById('payments-by-category');
        if (insightsSection) {
            insightsSection.scrollIntoView({ behavior: 'smooth' });
        }
    }

    // Animation + Functionality for roundUpToggle switch
    document.addEventListener('DOMContentLoaded', function () {
    const toggle = document.getElementById('roundUpToggle');
    const statusText = document.querySelector('.toggle-status');
    
    if (toggle && statusText) {
        toggle.addEventListener('change', function() {
            if (this.checked) {
                const response = fetch('/account/roundup', {
                    method: 'POST'
                });
                statusText.textContent = 'Enabled';
                statusText.style.backgroundColor = 'rgba(0, 255, 0, 0.2)';

            } else {
                const response = fetch('/account/roundupoff', {
                    method: 'POST'
                });
                statusText.textContent = 'Disabled';
                statusText.style.backgroundColor = 'rgba(255, 255, 255, 0.2)';
            }

        });
    }
});

document.addEventListener('DOMContentLoaded', function () {
    const toggle = document.getElementById('roundUpToggle');
    const statusText = document.querySelector('.toggle-status');
    const reclaimContainer = document.getElementById('reclaimContainer');
    const reclaimButton = document.getElementById('reclaimButton');

    if (toggle && statusText && reclaimContainer) {
        toggle.addEventListener('change', function() {
            if (this.checked) {
                // Show reclaim button with animation
                reclaimContainer.classList.add('visible');
                statusText.textContent = 'Enabled';
                statusText.style.backgroundColor = 'rgba(0, 255, 0, 0.2)';
            } else {
                // Hide reclaim button
                reclaimContainer.classList.remove('visible');
                statusText.textContent = 'Disabled';
                statusText.style.backgroundColor = 'rgba(255, 255, 255, 0.2)';
            }
        });

        // Reclaim button click handler
        reclaimButton.addEventListener('click', function() {
            // Add temporary animation
            this.style.animation = 'reclaimAnimation 0.3s ease';
            
            // Remove animation after it completes
            setTimeout(() => {
                this.style.animation = '';
            }, 300);
            
            // Add your backend reclaim logic here later
            console.log('Reclaiming round-up balance...');
            
            // Temporary visual feedback
            this.textContent = 'Reclaiming...';
            setTimeout(() => {
                this.innerHTML = `<span class="sparkle">‚ú®</span> Reclaimed! <span class="sparkle">‚ú®</span>`;
                setTimeout(() => {
                    this.innerHTML = `<span class="sparkle">‚ú®</span> Reclaim Round-Up <span class="sparkle">‚ú®</span>`;
                }, 2000);
            }, 1000);
        });
    }
});

</script>
</html>